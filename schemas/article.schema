{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {

    "metadata": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "page_no":{
            "type": "array",
            "items": {"type": "integer"}
        },
        "publication": { "$ref": "#/definitions/controlled_field" },
        "type": { "$ref": "#/definitions/controlled_field" },
        "language": { "$ref": "#/definitions/controlled_field" }
      },
      "required": ["id", "title", "page_no", "publication", "type"]
    },

    "statistics":{
      "type": "object",
      "properties": {
        "word_count": { "type": "integer" },
        "character_count": { "type": "string" }
      },
      "required": ["word_count"]
  },

    "controlled_field":{
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "label": { "type": "string" },
        "qualifiedName": { "type": "string" }
      },
      "required": ["label"]
    }


  },

  "id": "article",

  "type": "object",

  "properties": {
    "meta": { "$ref": "#/definitions/metadata" },
    "stats": { "$ref": "#/definitions/statistics" },
    "fulltext":  { "type": "string" }
},
"required": ["fulltext", "meta"]
}
